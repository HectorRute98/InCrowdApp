<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gprosoft.incrowdapp.ui.view.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.gprosoft.incrowdapp.ui.view.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_following"
        android:name="com.gprosoft.incrowdapp.ui.view.following.FollowingFragment"
        android:label="@string/title_following"
        tools:layout="@layout/fragment_following" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.gprosoft.incrowdapp.ui.view.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_addevent"
        android:name="com.gprosoft.incrowdapp.ui.view.addevent.AddEventFragment"
        android:label="@string/title_addevent"
        tools:layout="@layout/fragment_add_event" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.gprosoft.incrowdapp.ui.view.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/navigation_modifyprofile"
        android:name="com.gprosoft.incrowdapp.ui.view.modify_profile.ModifyProfileFragment"
        android:label="@string/title_modifyprofile"
        tools:layout="@layout/fragment_modify_profile" />

</navigation>