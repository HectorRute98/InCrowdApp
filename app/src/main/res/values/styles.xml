<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/amarillo</item>
        <item name="colorControlNormal">@color/gris</item>
    </style>

    <style name="LittleRatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.LittleRatingBar</item>
        <item name="colorControlActivated">@color/amarillo</item>
        <item name="colorControlNormal">@color/gris</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="Controls.LittleRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

</resources>